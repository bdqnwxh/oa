<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
		<class  name="com.bdqn.po.Emp"   table="emp"  dynamic-update="true" >
					<!-- 主键 -->
					<id  name="empNo">
							<column name="empno"/>
							<!-- 主键生成策略  assigned ： 自动标示；sequence：序列 ；identity：自增长-->
							<generator class="sequence">
										<param name="sequence">seq_emp</param>
							</generator>
					</id>
					<property name="empName"   column="ename"/>
					<property name="sal"   column="sal"/>
					<property name="job">
							<column name="job"/>
					</property>
		</class>
</hibernate-mapping>